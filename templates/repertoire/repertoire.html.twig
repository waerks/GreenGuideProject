{% include "header/header.html.twig" %}


<section>
    <div class="container">
        <section id="repertoireFiltre">
            <h2>Le répertoire</h2>
            <div class="divFiltre">
                <div class="divOne">
                    <input type="text" name="newsletters" class="input" placeholder="Rechercher...">
                    {# <button type="submit" id="mainBtn">
                        <a href="#rechercher">Rechercher</a>
                    </button> #}
                </div>
                <div class="divTwo">
                    <div class="divCategorie">
                        <button type="submit" id="allBtn">Toutes les catégories</button>
                        <button type="submit" id="filtreBtn"><span><img src="{{ asset('/build/images/icons/legume.png')}}" alt="Légumes"></span>Légumes</button>
                        <button type="submit" id="filtreBtn"><span><img src="{{ asset('/build/images/icons/fruit.png')}}" alt="Fruits"></span>Fruits</button>
                        <button type="submit" id="filtreBtn"><span><img src="{{ asset('/build/images/icons/plante.png')}}" alt="Plantes"></span>Plantes</button>
                    </div>
                </div>
            </div>
        </section>
        <section id="repertoire">
        {% for element in elements %}
                {% for type in element.typeElement %}
                    <a id="cardRepertoire" href="{{ path('repertoire_detail', { 'category' : type.nom, 'nom' : element.nom})}}">
                        <span><img src="{{ asset('/uploads/photosPlantes/' ~ type.nom ~ '/' ~ element.image)}}" alt="{{ element.nom }}"></span>
                        <div class="cardInfo">
                        <h4>{{ element.nom }}</h4>
                            <span><img src="{{ asset('/build/images/logo/icons/' ~ type.nom ~ '.png') }}" alt="{{ type.nom }}"></span>
                        </div>
                    </a>
                {% endfor %}
        {% endfor %}
        </section>
    </div>
</section>


{% include "footer/footer.html.twig" %}